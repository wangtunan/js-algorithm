  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "args": [
        "${workspaceRoot}/index.ts"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "program": "${workspaceFolder}\\index.ts",
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**", 
        "**/node_modules"
      ],
      "env": {
        "BABEL_ENV": "debug"
      }
    }
  ]
}